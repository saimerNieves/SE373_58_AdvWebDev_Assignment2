                                <textarea  name="message"  class="form-control" id="message" type="text"  style="height: 10rem"required></textarea>
                                <label for="message">Message</label>
                            </div>

                            <input class="btn btn-primary btn-xl"  id="submitButton" type="submit" value="Send Info">
                        </form>
                    </div>
                </div>
                </div>
            </div>
